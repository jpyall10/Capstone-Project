<resources>

    <!-- Base application theme. -->
    <style name="Theme.Project7" parent="Base.Theme.Project7">
        <!-- Customize your theme here. -->
    </style>

    <style name="Base.Theme.Project7" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:toolbarStyle">@style/TeachMeActionBarStyle</item>-->
        <!--<item name="android:windowBackground">@color/window_background</item>-->
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TeachMeActionBarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="ItemTitle" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowRadius">10</item>
    </style>

    <style name="TabTextAppearance" parent="android:TextAppearance.DeviceDefault.Widget.TabWidget">
        <item name="textAllCaps">false</item>
    </style>
</resources>
